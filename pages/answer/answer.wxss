.ready-num {
  position: absolute; 
  top: 0rpx;
  width: 100%;
  font-size: 660rpx;
  animation: myfirst 0.8s linear ;
  opacity: 0;
  color: white;
  left: 30rpx;
}

.ready-num-1 {
  position: absolute; 
  top: 200rpx;
  width: 100%;
  font-size: 350rpx;
  animation: myfirst 0.6s linear ;
  opacity: 0;
  color: white;
  left: 25rpx;
}

@keyframes myfirst /* Safari 和 Chrome */
{
  0%   {opacity: 0;}
  25%  {opacity: 1;}
  50%  {transform: scale(0.5);}
  100% {opacity: 0;transform: scale(0.5)}
}

.answer-top-view { 
  position: absolute;
  display: flex;
  width: 100%;
  height: 100%; 
  left: 0rpx;
  top: -600rpx;
  text-align: center;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  -webkit-justify-content: center;
  -webkit-align-items: center;
  animation: top-view-down 0.5s linear forwards;  
}

@keyframes top-view-down /* Safari 和 Chrome */
{
  0%   {transform: translateY(0);} 
  100% {transform: translateY(600rpx);}
}

.answer-buttom-view { 
  position: absolute;
  display: flex;
  width: 100%;
  height: 100%; 
  top:600rpx; 
  text-align: center;
  align-items: center;
  flex-direction: column;
  animation: top-buttom-up 0.5s linear forwards;
}

@keyframes top-buttom-up /* Safari 和 Chrome */
{
  0%   {transform: translateY(0);} 
  100% {transform: translateY(-600rpx);}
}


